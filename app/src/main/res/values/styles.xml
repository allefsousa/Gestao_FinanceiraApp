<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.FacebookBlockButton" parent="AppTheme.BlockButton">
        <item name="android:background">@color/facebook_blue</item>
        <item name="android:drawableLeft">@drawable/com_facebook_button_icon</item>
        <item name="android:textColor">@color/Branco</item>
    </style>

    <style name="AppTheme.GoogleBlockButton" parent="AppTheme.BlockButton">
        <item name="android:background">@color/Branco</item>
        <item name="android:drawableLeft">@drawable/googleg_standard_color_18</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="AppTheme.BlockButton">
        <item name="android:textSize">12dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="SplashTheme" parent="MyTheme">

        <item name="android:windowBackground">@drawable/splashdesing</item>
    </style>

    <style name="Theme" parent="AppTheme.NoActionBar">
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="MyTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
