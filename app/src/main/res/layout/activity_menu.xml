<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Branco"
    tools:context="br.com.felipedeveloper.gestaofinanceira.Telas.MenuActivity">

    <com.balysv.materialripple.MaterialRippleLayout
        android:id="@+id/ripplecard"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ripplegrupos"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ripplebanco"
        app:layout_constraintVertical_bias="0.0"
        app:mrl_rippleAlpha="0.4 "
        app:mrl_rippleColor="@color/Branco"
        app:mrl_rippleDimension="10dp"
        app:mrl_rippleDuration="350"
        app:mrl_rippleFadeDuration="75"
        app:mrl_rippleOverlay="true">


        <android.support.v7.widget.CardView
            android:id="@+id/cardViewcartao"
            android:layout_width="170dp"
            android:layout_height="170dp"
            app:cardBackgroundColor="@color/principal">

            <TextView
                android:id="@+id/titulocartao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginTop="5dp"
                android:paddingBottom="06dp"
                android:text="CARTÕES"
                android:textColor="@color/Branco"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_cartao" />


        </android.support.v7.widget.CardView>
    </com.balysv.materialripple.MaterialRippleLayout>

    <com.balysv.materialripple.MaterialRippleLayout
        android:id="@+id/ripplegrupos"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_marginBottom="8dp"

        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ripplecarte"
        app:layout_constraintVertical_bias="0.0"
        app:mrl_rippleAlpha="0.4 "
        app:mrl_rippleColor="@color/Branco"
        app:mrl_rippleDimension="10dp"
        app:mrl_rippleDuration="350"
        app:mrl_rippleFadeDuration="75"
        app:mrl_rippleOverlay="true">

        <android.support.v7.widget.CardView
            android:id="@+id/cardViewgrupo"
            android:layout_width="170dp"
            android:layout_height="170dp"
            app:cardBackgroundColor="@color/principal"
            tools:layout_editor_absoluteX="198dp"
            tools:layout_editor_absoluteY="406dp">


            <TextView
                android:id="@+id/titulogrupo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginTop="5dp"
                android:text="GRUPOS"
                android:textColor="@color/Branco"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_grupo" />

        </android.support.v7.widget.CardView>
    </com.balysv.materialripple.MaterialRippleLayout>

    <com.balysv.materialripple.MaterialRippleLayout
        android:id="@+id/ripplecarte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ripplela"
        app:mrl_rippleAlpha="0.4 "
        app:mrl_rippleColor="@color/Branco"
        app:mrl_rippleDimension="10dp"
        app:mrl_rippleDuration="350"
        app:mrl_rippleFadeDuration="75"
        app:mrl_rippleOverlay="true">


        <android.support.v7.widget.CardView
            android:id="@+id/cardViewcarteira"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_gravity="right"
            app:cardBackgroundColor="@color/principal">

            <TextView
                android:id="@+id/titulocarte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:layout_marginTop="5dp"
                android:paddingBottom="06dp"
                android:text="CARTEIRA"
                android:textColor="@color/Branco"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_carteira" />


        </android.support.v7.widget.CardView>
    </com.balysv.materialripple.MaterialRippleLayout>

    <com.balysv.materialripple.MaterialRippleLayout
        android:id="@+id/rippletransa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toStartOf="@+id/ripplela"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:mrl_rippleAlpha="0.4 "
        app:mrl_rippleColor="@color/Branco"
        app:mrl_rippleDimension="10dp"
        app:mrl_rippleDuration="350"
        app:mrl_rippleFadeDuration="75"
        app:mrl_rippleOverlay="true">

        <android.support.v7.widget.CardView
            android:id="@+id/cardViewtransa"
            android:layout_width="170dp"
            android:layout_height="170dp"
            app:cardBackgroundColor="@color/principal">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_lancamentos" />


            <TextView
                android:id="@+id/titulotransa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:layout_marginBottom="06dp"
                android:layout_marginTop="5dp"
                android:text="TRANSAÇÕES"
                android:textColor="@color/Branco"
                android:textSize="16sp" />

        </android.support.v7.widget.CardView>
    </com.balysv.materialripple.MaterialRippleLayout>

    <com.balysv.materialripple.MaterialRippleLayout
        android:id="@+id/ripplebanco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toStartOf="@+id/ripplecarte"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rippletransa"
        app:mrl_rippleAlpha="0.4 "
        app:mrl_rippleColor="@color/Branco"
        app:mrl_rippleDimension="10dp"
        app:mrl_rippleDuration="350"
        app:mrl_rippleFadeDuration="75"
        app:mrl_rippleOverlay="true">

        <android.support.v7.widget.CardView
            android:id="@+id/cardViewcontasbancaria"
            android:layout_width="170dp"
            android:layout_height="170dp"
            app:cardBackgroundColor="@color/principal">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_banco" />

            <TextView
                android:id="@+id/titulocontabancarias"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:paddingBottom="06dp"
                android:text="CONTAS"
                android:textColor="@color/Branco"
                android:textSize="16sp" />


        </android.support.v7.widget.CardView>
    </com.balysv.materialripple.MaterialRippleLayout>

    <com.balysv.materialripple.MaterialRippleLayout
        android:id="@+id/ripplela"
        android:layout_width="170dp"
        android:layout_height="170dp"

        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:mrl_rippleAlpha="0.4 "
        app:mrl_rippleColor="@color/Branco"
        app:mrl_rippleDimension="10dp"
        app:mrl_rippleDuration="350"
        app:mrl_rippleFadeDuration="75"
        app:mrl_rippleOverlay="true">

        <android.support.v7.widget.CardView
            android:id="@+id/cardViewlancamentos"
            android:layout_width="170dp"
            android:layout_height="170dp"
            app:cardBackgroundColor="@color/principal">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_transacao" />

            <TextView
                android:id="@+id/titulocarteira"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:layout_marginTop="5dp"
                android:paddingBottom="06dp"
                android:text="LANÇAMENTOS"
                android:textColor="@color/Branco"
                android:textSize="16sp" />

        </android.support.v7.widget.CardView>
    </com.balysv.materialripple.MaterialRippleLayout>

</android.support.constraint.ConstraintLayout>

