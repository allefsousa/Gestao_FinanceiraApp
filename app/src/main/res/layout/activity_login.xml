<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.felipedeveloper.gestaofinanceira.LoginActivity"
    tools:layout_editor_absoluteY="81dp">
    <com.daimajia.slider.library.SliderLayout
        android:id="@+id/slider"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        />
    <Button
        android:id="@+id/btnfacebook"
        style="@style/AppTheme.FacebookBlockButton"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginBottom="17dp"
        android:layout_marginEnd="1dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="264dp"
        android:text="ENTRAR COM FACEBOOK"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btngoogle"
        app:layout_constraintEnd_toEndOf="@+id/btngoogle"
        app:layout_constraintStart_toStartOf="@+id/btngoogle"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btngoogle"
        style="@style/AppTheme.GoogleBlockButton"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="68dp"
        android:layout_marginStart="68dp"
        android:text="ENTRAR COM GOOGLE"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btnemail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnfacebook" />

    <Button
        android:id="@+id/btnemail"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginBottom="71dp"
        android:layout_marginEnd="67dp"
        android:layout_marginStart="67dp"
        android:background="@color/principal"
        android:drawableLeft="@drawable/ic_email_black_24dp"
        android:paddingLeft="10dp"
        android:text="REGISTRAR OU ENTRAR COM EMAIL"
        android:textColor="@color/Branco"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btngoogle" />
</android.support.constraint.ConstraintLayout>
