<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewcontasbancaria"
        app:cardCornerRadius="7dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardViewcarteira"
        android:layout_width="350dp"
        android:layout_height="80dp"
        tools:layout_editor_absoluteX="17dp"
        tools:layout_editor_absoluteY="16dp">

        <View
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:background="@color/cpb_blue">

        </View>

        <TextView
            android:id="@+id/titulocontabancarias"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingLeft="22dp"
            android:text="CONTAS BANCARIAS"
            android:textColor="@color/primary_text"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/cardsaldocontabancaria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="05dp"
            android:paddingRight="120dp"
            android:text="R$:"
            android:textColor="@color/cpb_blue"
            android:textSize="16dp" />
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>